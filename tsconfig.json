{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      // aliases for apps start at project root
      "@apps/web/*": ["apps/web/*"],
      "@apps/server/*": ["apps/server/*"],

      "@packages/svelte-query": ["packages/svelte-query/src"],
      "@packages/svelte-query/*": ["packages/svelte-query/src/*"],
    }
  }
}
